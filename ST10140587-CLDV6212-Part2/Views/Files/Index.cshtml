@{
    ViewBag.Title = "Upload a Product Image";
}

<h2>Upload a Product Image</h2>

<!-- Display success or error messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Form to upload a file -->
<form asp-action="UploadImage" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="file" class="control-label">Select Product Image</label>
        <input type="file" name="file" id="file" class="form-control" accept=".jpg,.png" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-primary" />
    </div>
</form>


