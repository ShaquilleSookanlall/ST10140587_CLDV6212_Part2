@model IEnumerable<ST10140587_CLDV6212_Part2.Models.Order>

@{
    ViewBag.Title = "All Orders";
}

<h2>All Orders</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Product Name</th>
            <th>Order Date</th>
            <th>Order Status</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.RowKey</td>
                <td>@order.CustomerName</td>
                <td>@order.ProductName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.OrderStatus</td>
                <td>@order.TotalPrice</td>
                <td>
                    <a asp-action="Details" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey" class="btn btn-info">View</a>
                    <a asp-action="Delete" asp-route-partitionKey="@order.PartitionKey" asp-route-rowKey="@order.RowKey" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
