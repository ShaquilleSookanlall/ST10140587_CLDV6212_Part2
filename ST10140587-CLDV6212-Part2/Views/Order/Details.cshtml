@model ST10140587_CLDV6212_Part2.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

<div class="form-group">
    <label>Order ID:</label>
    <p>@Model.RowKey</p>
</div>

<div class="form-group">
    <label>Customer Name:</label>
    <p>@Model.CustomerName</p>
</div>

<div class="form-group">
    <label>Product Name:</label>
    <p>@Model.ProductName</p>
</div>

<div class="form-group">
    <label>Order Date:</label>
    <p>@Model.OrderDate.ToString("yyyy-MM-dd")</p>
</div>

<div class="form-group">
    <label>Order Status:</label>
    <p>@Model.OrderStatus</p>
</div>

<div class="form-group">
    <label>Total Price:</label>
    <p>@Model.TotalPrice</p>
</div>

<div class="form-group">
    <label>Order Address:</label>
    <p>@Model.Order_Address</p>
</div>

<a asp-action="Index" class="btn btn-primary">Back to Orders</a>
