@model Order

<h2>Order Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Order_Id</dd>

        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.Customer_ID</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.Product_ID</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Order_Date.ToString("MM/dd/yyyy")</dd>

        <dt class="col-sm-2">Order Address</dt>
        <dd class="col-sm-10">@Model.Order_Address</dd>
    </dl>
</div>

<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
<a href="@Url.Action("Delete", new { partitionKey = Model.PartitionKey, rowKey = Model.RowKey })" class="btn btn-danger">Delete</a>
