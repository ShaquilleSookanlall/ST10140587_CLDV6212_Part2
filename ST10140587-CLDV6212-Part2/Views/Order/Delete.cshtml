@model ST10140587_CLDV6212_Part2.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Are you sure you want to delete this order?</h2>

<div class="form-group">
    <label>Order ID:</label>
    <p>@Model.RowKey</p>
</div>

<div class="form-group">
    <label>Customer Name:</label>
    <p>@Model.CustomerName</p>
</div>

<div class="form-group">
    <label>Product Name:</label>
    <p>@Model.ProductName</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
